<h1>Articles</h1>
<%= link_to new_article_path do %>
	<span class="glyphicon glyphicon-plus"></span> New Article
<% end %>
<hr>

<% @articles.each do |a| %>
	<div class="each-article">
		<h2><%= link_to a.title, a %></h2>
		<p>
			<%= a.content.html_safe %>
		</p>

		<div class="comments">

			<%= content_tag(:div, id: "comments_#{a.id}") do %>
				<%= render a.comments %>
			<% end %>
			<%= render 'add_comment', a: a %>

		</div>

	</div><!-- article -->
<% end %>